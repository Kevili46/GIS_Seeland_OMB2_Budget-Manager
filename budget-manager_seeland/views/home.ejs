<html lang="de">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Semesterbegeleitende Aufgabe in Grundlagen Interaktiver Systeme OMB2" />
    <meta name="keywords" content="Budget, Manager, Geld, Haushaltsbuch, Ausgaben, Einnahmen, verwalten" />
    <meta name="author" content="Kevin Seeland" />
    <link rel="stylesheet" href="./style/style.css" />
    <script src="./scripts/script.js" defer></script>
    <title>Budglet | <%= title %></title>
  </head>
  
  <body>

    <!-- HEADER-->

    <header>

        <div class="UserInterfaceHeader">
            <!-- Logo -->
            <a href="/home">
                <img id="Logo"
                src="images/sparschwein.png"
                alt="Sparschwein"
                title="Logo" />
            </a>

            <!-- Personalized Headline-->
            <h2>Test's Budglet</h2>
        </div>

    </header>

    <!-- MAIN -->

    <main>

        <div class="UserInterfaceMain">
            <!-- Main Navigation-->
            <nav class="MainNav">
                <ul>
                    <li class="currentNav"><strong>Home</strong></li>
                    <a  class="nextNav" href="/transaktionen"><li>Transaktionen</li></a>
                    <a  class="nextNav" href="/statistiken"><li>Statistiken</li></a>
                </ul>
            </nav>

            <!-- Balance Window -->
            <div class="WorkingWindow" id="WorkingWindowHome">
                <!-- Title -->
                <h3>Kontostand</h3>

                <!-- BalanceBox + newTransaction-->
                <div id="BalanceBox">
                    <!-- current Balance -->
                    <% let balance = 0 %>
                    <% if(transactions.length > 0) { %>
                        <% for(let transaction of transactions) { %>
                            <% balance += transaction.betrag; %>
                        <% } %>
                    <% } %>

                    <p id="displayBalance"> <%= Intl.NumberFormat('de-DE', { style: 'currency',currency: 'EUR'}).format(balance) %></p>

                    <!-- new Transaction -->
                    <div id="kindOfTransaction">
                        <a href="/einnahme">
                            <img class="iconButton" id="einnahmeIcon"
                            src="images/plus.png"
                            alt="PLUS"
                            title="Einnahme"/>
                        </a>
                        <a  href="/ausgabe">
                            <img class="iconButton" id="ausgabeIcon"
                            src="images/minus.png"
                            alt="MINUS"
                            title="Ausgabe"/>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Logout -->
            <a class="button" id="logout" href="/">Logout</a>
        </div>

    </main>

    <!-- FOOTER -->

    <footer>

        <!-- Copyright -->
        <p>Â© Copyright 2022 Kevin Seeland</p>

    </footer>

  </body>

</html>